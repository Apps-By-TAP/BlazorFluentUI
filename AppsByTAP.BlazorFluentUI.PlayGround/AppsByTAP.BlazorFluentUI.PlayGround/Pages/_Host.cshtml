@page "/"
@namespace AppsByTAP.BlazorFluentUI.PlayGround.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AppsByTAP.BlazorFluentUI.PlayGround</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="AppsByTAP.BlazorFluentUI.PlayGround.styles.css" rel="stylesheet" />
    <link href="css/open-iconic/font/css/open-iconic-bootstrap.min.css" rel="stylesheet">
    <link href="_content/AppsByTAP.BlazorFluentUI.Components/css/fabric-icons-inline.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script>
        function GetElements(x, y) {
            var elements = document.getElementsByClassName("day");

            for (var i = 0; i < elements.length; i++) {
                var rect = elements[i].getBoundingClientRect();

                elements[i].style.borderImage = "";

                var centerX = rect.left + rect.width / 2;
                var centerY = rect.top + rect.height / 2;

                var vectX = centerX - x;
                var vectY = centerY - y;

                var length = Math.sqrt(vectX * vectX + vectY * vectY);


                if (length <= 50) {
                    var xx = x - rect.left;// - window.scrollX;
                    var yy = y - rect.top;// - window.scrollY;

                    elements[i].style.borderImage = "radial-gradient(60px circle at " + xx + "px " + yy + "px, var(--semanticColors-ButtonBorder), transparent)";
                    elements[i].style.borderImageSlice = 1;
                }


            }

            //
        }

        function UnRevealHighlight() {
            var elements = document.getElementsByClassName("day");

            for (var i = 0; i < elements.length; i++) {
                elements[i].style.borderImage = "";
            }
        }
    </script>
    <style>
        .pink{
            background-color: pink;
        }
    </style>
</body>
</html>
