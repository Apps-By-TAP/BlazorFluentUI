@using AppsByTAP.BlazorFluentUI.Components.Icon
@using AppsByTAP.BlazorFluentUI.Components.CheckBox
@using AppsByTAP.BlazorFluentUI.Components.BaseComponent 

@namespace AppsByTAP.BlazorFluentUI.Components.DropDown

<div class="dropDownWrapper @ClassName" style="width: @Width;" @onblur="Close">
    <div class="label @(Disabled ? "disabledText" : "")">@Label</div>
    <div class="dropDownCtrl @(Disabled ? "disabled" : "")" @onclick="OpenDropDown" style="width: @Width;">
        <div class="dropDownSelection" style="flex: 1;">
            @DisplayInfo
        </div>
        <span class="dropDownChenron"><Icon IconType="IconTypes.ChevronDown" /></span>
    </div>
    <div class="lightDismiss" style="display: @(IsOpen ? "block" : "none")" @onclick="Close" @onmousewheel="Close"></div>
    <div id="@_id" class="itemsPanel" style="visibility: @(IsOpen ? "visible" : "hidden"); z-index: @(LayerCounter.GetLayer()); width: @Width; @(ItemsPanelHeight < 0 ? "height: fit-content;" : $"max-height: {ItemsPanelHeight}px;") @(_top > -1 ? $"top: {_top}px;" : "")">
        @Content
    </div>
</div>